private BluetoothAdapter.LeScanCallback mScanCallback = new BluetoothAdapter.LeScanCallback() {
	@Override
	public void onLeScan(BluetoothDevice bluetoothDevice, int i, byte[] bytes) {
		handleScanResult(bluetoothDevice, i, bytes);
	}
};

Android 5.0+
